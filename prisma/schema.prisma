generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id          String   @id @default(uuid())
  name        String
  description String
  bar_code    String   @unique
  created_at  DateTime @default(now())

  @@map("books")
}

model Category {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())

  @@map("categories")
}
